<?xml version="1.0" encoding="utf-8"?>
    <!--
    <include layout="@layout/graffiti__title_bar"/>
-->
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:background="#000000"
    android:baselineAligned="false">

        <!-- 涂抹图片区域-->
        <FrameLayout
            android:id="@+id/graffiti_container"
            android:paddingTop="20dp"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="0dp"
            android:layout_weight="8.5"/>

    <!-- 10dp+10dp +10dp +46dp+-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <ImageView
                android:id="@+id/btn_grafi_back"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/btn_back"
                />


            <ImageView
                android:id="@+id/btn_save"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/btn_save"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/react_round_black"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/btn_clear"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:src="@drawable/btn_clear"
                    />
                <ImageView
                    android:id="@+id/btn_undo"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/btn_undo"
                    />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/line_white"/>

                <com.paicheya.hammer.graffitipicture.widget.DesignCheckBox
                    android:id="@+id/designcheck_size"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="0dp"
                    android:orientation="horizontal">

                    <com.paicheya.hammer.graffitipicture.widget.DesignButton
                        android:layout_width="46dp"
                        android:layout_height="15dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        app:designbt_src="@drawable/rectangle_white" />

                    <com.paicheya.hammer.graffitipicture.widget.DesignButton
                        android:layout_width="46dp"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        app:designbt_src="@drawable/rectangle_white" />
                    <com.paicheya.hammer.graffitipicture.widget.DesignButton
                        android:layout_width="46dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        app:designbt_src="@drawable/rectangle_white" />
                    <com.paicheya.hammer.graffitipicture.widget.DesignButton
                        android:layout_width="46dp"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        app:designbt_src="@drawable/rectangle_white" />

                </com.paicheya.hammer.graffitipicture.widget.DesignCheckBox>


                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/line_white"/>

                <com.paicheya.hammer.graffitipicture.widget.DesignCheckBox
                    android:id="@+id/designcheck_color"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="0dp"
                    android:orientation="horizontal">
                    <com.paicheya.hammer.graffitipicture.widget.DesignButton
                        android:layout_width="46dp"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        app:designbt_src="@drawable/rectangle_green" />
                    <com.paicheya.hammer.graffitipicture.widget.DesignButton
                        android:layout_width="46dp"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        app:designbt_src="@drawable/rectangle_orange" />
                    <com.paicheya.hammer.graffitipicture.widget.DesignButton
                        android:layout_width="46dp"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        app:designbt_src="@drawable/rectangle_white" />
                </com.paicheya.hammer.graffitipicture.widget.DesignCheckBox>

            </LinearLayout>

        </RelativeLayout>




    </LinearLayout>

